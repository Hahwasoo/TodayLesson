<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.todaylesson.Mapper.Admin_HM_EventMapper">

<select id="eventlist" resultType="com.todaylesson.DTO.EventDTO">
select event_no,event_group,event_title,event_content,event_startperiod,event_endperiod,event_thumbnail
from event
</select>

<insert id="eventinsert" parameterType="com.todaylesson.DTO.EventDTO" >
insert into event(event_group, event_title, event_content, event_startperiod, event_endperiod,event_thumbnail)
values(#{event_group},#{event_title},#{event_content},#{event_startperiod},#{event_endperiod},#{event_thumbnail})
</insert>

<select id="eventdetail" parameterType="int" resultType="com.todaylesson.DTO.EventDTO">
select event_no,event_group,event_title,event_content,event_startperiod,event_endperiod,event_thumbnail
from event
where event_no = #{event_no}
</select>
</mapper>